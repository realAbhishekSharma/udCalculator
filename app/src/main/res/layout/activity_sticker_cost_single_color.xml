<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".StickerCostSingleColor">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DesktopCalculator"
    android:orientation="vertical"
    android:background="@color/black90"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        >
        <TextView
            android:text="Sticker Size :-"
            android:textAllCaps="false"
            style="@style/textShow"
            />
        <TextView
            android:id="@+id/sizeTextSCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/boxShow"
            android:background="@drawable/box"
            android:gravity="left"
            android:textColor="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">


        <TextView
            android:text="Split :-"
            style="@style/textShow"/>

        <EditText
            android:id="@+id/splitSizeSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:background="@drawable/box"
            style="@style/boxShow"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">


        <TextView
            android:text="Sticker Rate :-"
            style="@style/textShow"/>

        <EditText
            android:id="@+id/stickerRateSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:background="@drawable/box"
            style="@style/boxShow"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Quantity :-"
            style="@style/textShow"/>

        <EditText
            android:id="@+id/quantitySCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <!-- Formula Layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView

            android:text="Total Sticker :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/totalStickerSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Impression :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/impressionSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Sticker Cost :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/stickerCostSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:text="CTP Plate Cost :-"
            style="@style/textShow"
            />
        <TextView
            android:id="@+id/ctpCostSCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/boxShow"
            android:background="@drawable/box"
            android:gravity="left"
            android:textColor="@color/white"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Printing Cost :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/printingCostSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Total Cost :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/totalCostSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Cost/Pcs :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/costPerPcsSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Customer Cost :-"
            style="@style/textShow"/>
        <TextView
            android:id="@+id/customerCostSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:text="Lamination Cost :-"
            style="@style/textShow"/>

        <Switch
            android:id="@+id/laminationSwitchSCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/laminationCostSCF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/calculating"
            android:background="@drawable/box"
            style="@style/boxShow"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center">


        <Button
            android:id="@+id/resetSCF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            style="@style/textShow"
            android:textColor="@color/white"
            android:background="@drawable/button_gradiant"
            android:textAllCaps="false"/>
    </LinearLayout>



</LinearLayout>


</ScrollView>